{
  "builders": [{
    "type": "docker",
    "image": "ubuntu:18.04",
    "commit": "true",
    "changes": [
       "ENTRYPOINT [\"/usr/bin/python3\", \"/app/server.py\"]"
    ]
  }],
 "provisioners": [
    {
      "type": "shell",
      "inline": [
        "apt-get -y update",
        "apt-get -y install python3-pip",
        "pip3 install ansible==2.8.1"
      ]
    },
    {
      "type": "ansible-local",
      "playbook_file": "./ansible/build.yaml"
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "ozlevka/test-packer",
        "tag": "0.1"
      }
    ]
  ]
}